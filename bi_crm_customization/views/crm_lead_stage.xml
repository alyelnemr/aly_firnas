<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_lead_leadstage_search" model="ir.ui.view">
        <field name="name">Lead Stage - Search</field>
        <field name="model">crm.leadstage</field>
        <field name="arch" type="xml">
            <search string="Lead Stage Search">
                <field name="name"/>
                <field name="sequence"/>
                <field name="is_won"/>
                <field name="team_id"/>
            </search>
        </field>
    </record>

    <record id="crm_leadstage_tree" model="ir.ui.view">
        <field name="name">crm.lead.stage.tree</field>
        <field name="model">crm.leadstage</field>
        <field name="arch" type="xml">
            <tree string="Lead Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_won"/>
                <field name="team_id"/>
            </tree>
        </field>
    </record>

    <record id="crm_leadstage_form" model="ir.ui.view">
        <field name="name">crm.lead.stage.form</field>
        <field name="model">crm.leadstage</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_won"/>
                            <field name="fold"/>
                            <field name="team_id" options='{"no_open": True, "no_create": True}' kanban_view_ref="%(sales_team.crm_team_view_kanban)s"/>
                        </group>
                    </group>
                    <separator string="Requirements"/>
                    <field name="requirements" nolabel="1" placeholder="Give your team the requirements to move an opportunity to this stage."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_leadstage_action" model="ir.actions.act_window">
        <field name="name">Lead Stages</field>
        <field name="res_model">crm.leadstage</field>
        <field name="view_id" ref="crm_leadstage_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new stage in your opportunity pipeline
          </p><p>
            Stages allow salespersons to easily track how a specific opportunity
            is positioned in the sales cycle.
          </p>
        </field>
    </record>

    <menuitem
            id="crm.menu_crm_lead_stage_act"
            name="Opportunities Stages"
            sequence="0"
            action="crm.crm_stage_action"
            parent="crm.menu_crm_config_lead"
            groups="base.group_no_one"/>

    <menuitem
        id="menu_crm_lead_leadstage_act"
        name="Lead Stages"
        sequence="0"
        action="crm_leadstage_action"
        parent="crm.menu_crm_config_lead"/>

</odoo>
