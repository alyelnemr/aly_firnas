<odoo>
    <data>
        <record id="aly_create_duplicate_project_crm_wizard_view" model="ir.ui.view">
            <field name="name">create.duplicate.project.crm.wizard.view</field>
            <field name="model">create.duplicate.project.crm.wizard</field>
            <field name="arch" type="xml">
                <form string="Create or Duplicate Prject">
                    <sheet>
                        <group string="Create Project">
                            <group>
                                <field name="is_create_project"/>
                                <field name="wizard_project_id" attrs="{'invisible':[('is_create_project','=',False)], 'required':[('is_create_project','=',True)]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_duplicate_project" string="Create Project"
                                type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object"
                                special="cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="aly_action_create_project_crm_stage_wizard" model="ir.actions.act_window">
            <field name="name">Create or Duplicate Project</field>
            <field name="res_model">create.duplicate.project.crm.wizard</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <record id="aly_server_action_create_project_crm_stage_wizard" model="ir.actions.server">
        <field name="name">Create or Duplicate Project</field>
            <field name="model_id" ref="model_create_duplicate_project_crm_wizard"/>
            <field name="binding_model_id" ref="crm.model_crm_lead"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
action_values = env.ref('bi_crm_stage_notification.aly_action_create_project_crm_stage_wizard').sudo().read()[0]
action_values.update({'context': env.context})
action = action_values
            </field>
        </record>

    </data>
</odoo>