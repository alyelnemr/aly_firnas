<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="aly_purchase_order_line_tree">
            <field name="name">purchase_discount.order.line.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="discount"/>
                </field>
            </field>
        </record>
        <record id="po_lines_action" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem
                id="po_lines_menu"
                name="Purchase Order Lines"
                action="po_lines_action"
                parent="purchase.menu_procurement_management"
                sequence="5"
        />
    </data>
</odoo>