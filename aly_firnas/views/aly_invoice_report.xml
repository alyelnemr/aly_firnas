<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="aly_invoice_main_template">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:wght@300" rel="stylesheet"/>
        <div class="page" style="z-index:1000 !important;font-weight: normal; font-family: Open Sans; font-size: 15px;">
<!--            <div class="oe_structure"/>-->
            <br />
            <table style="width:100%;border: 0px;margin-left: 10px;">
                <tr>
                    <th style="width:50%;color:rgb(86, 56, 90); font-weight: bold;">Invoice To (Seller)</th>
                    <th style="width:50%;color:rgb(86, 56, 90); font-weight: bold;">Client</th>
                </tr>
                <tr>
                    <td style="width:50%;">
                        <div t-field="o.company_id.partner_id" style="font-weight: bold;"
                             t-options='{"widget": "contact", "fields": ["name"], "no_marker": True, "phone_icons": False}'/>
                    </td>
                    <td style="width:50%;">
                        <div t-field="o.partner_id" style="font-weight: bold;"
                             t-options='{"widget": "contact", "fields": ["name"], "no_marker": True, "phone_icons": False}'/>
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;">
                        <div t-field="o.company_id.partner_id" style="font-weight: normal;"
                             t-options='{"widget": "contact", "fields": ["address", "email"], "no_marker": True, "phone_icons": False}'/>
                    </td>
                    <td style="width:50%;">
                        <div t-field="o.partner_id" style="font-weight: normal;"
                             t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "phone_icons": False}'/>
                    </td>
                </tr>
                <tr>
                    <td style="width:50%;">
                        <t t-if="o.company_id.vat">
                            <span style="font-family: Open Sans !important;"
                                  class="text-left">Tax ID:
                            </span>
                            <span t-field="o.company_id.vat"
                                  style="font-family: Open Sans !important;"
                                  class="text-left"/>
                        </t>
                    </td>
                    <td style="width:50%;">
                    </td>
                </tr>
                <tr>
                    <td>
                        <br/>
                    </td>
                </tr>
            </table>
            <table style="width:100%;border: 0px;margin-left: 10px;">
                <tr style="width:100%;">
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.accountant_id.name">Contact</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.accountant_id.name" style="font-weight: normal;" class="text-left"/>
                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.partner_contact.name">Contact</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.partner_contact.name" style="font-weight: normal;" class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.user_id">
                            <t t-if="o.accountant_id">
                                <t t-if="o.accountant_id.mobile">
                                    Phone
                                </t>
                            </t>
                        </t>
                    </th>
                    <td style="width:35%;">
                        <t t-if="o.user_id">
                            <t t-if="o.accountant_id">
                                <t t-if="o.accountant_id.mobile">
                                    <span t-field="o.accountant_id.mobile" style="font-weight: normal;"
                                          class="text-left"/>
                                </t>
                            </t>
                        </t>
                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.partner_contact.mobile">Phone</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.partner_contact.mobile" style="font-weight: normal;" class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.accountant_id.email">Email</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.accountant_id.email" style="font-weight: normal; word-wrap: break-word;" class="text-left"/>
                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.partner_contact.email">Email</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.partner_contact.email" style="font-weight: normal;word-wrap: break-word;"
                              class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="width:15%;color:rgb(86, 56, 90); "></th>
                    <td style="width:35%;">

                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.ref">Reference</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.ref" style="font-weight: normal;" class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="width:15%;color:rgb(86, 56, 90); "></th>
                    <td style="width:35%;">
                        <br/>
                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">

                    </th>
                    <td style="width:35%;">

                    </td>
                </tr>
                <tr>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.invoice_date">Invoice Date</t>
                    </th>
                    <td style="width:35%;">
                        <t t-if="o.invoice_date">
                            <span t-esc="invoice_date" style="font-weight: normal;" class="text-left"/>
                        </t>
                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.invoice_payment_term_id">Payment Term</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.invoice_payment_term_id.name" style="font-weight: normal;" class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.invoice_date">Due Date</t>
                    </th>
                    <td style="width:35%;">
                        <t t-if="o.invoice_date">
                            <span t-esc="due_date" style="font-weight: normal;" class="text-left"/>
                        </t>
                    </td>
                    <th style="width:15%;color:rgb(86, 56, 90);font-weight: bold; ">
                        <t t-if="o.currency_id.name">Currency</t>
                    </th>
                    <td style="width:35%;">
                        <span t-field="o.currency_id.name" style="font-weight: normal;" class="text-left"/>
                    </td>
                </tr>
            </table>
            <br/>
            <table class="table table-sm o_main_table" style=" margin: auto; ">
                <thead>
                    <tr>
                        <th name="th_description" class="text-left"
                            style="font-family: Open Sans !important; width:70px; font-size: 15px;">
                            <strong>Description</strong>
                        </th>
                        <th name="th_quantity" class="text-right"
                            style="font-family: Open Sans !important; width:20px; font-size: 15px;">
                            <strong>Qty</strong>
                        </th>
                        <th name="th_uom" class="text-right"
                            style="font-family: Open Sans !important; width:20px; font-size: 15px;">
                            <strong>UOM</strong>
                        </th>
                        <th name="th_unit_price" class="text-right"
                            style="font-family: Open Sans !important; width:30px; font-size: 15px;">
                            <strong>Unit Price</strong>
                        </th>
                        <t t-if="is_discounted">
                            <th name="th_discount" class="text-right"
                                style="font-family: Open Sans !important; width:20px; font-size: 15px;">
                                <strong>Discount</strong>
                            </th>
                        </t>
                        <t t-if="is_taxed">
                            <th name="th_taxes" class="text-right"
                                style="font-family: Open Sans !important; width:60px; font-size: 15px;">
                                <strong>Taxes</strong>
                            </th>
                        </t>
                        <th name="th_subtotal" class="text-right"
                            style="font-family: Open Sans !important; width:30px; font-size: 15px;">
                            <strong>Subtotal</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.invoice_line_ids.filtered_domain([('is_printed', '=', True)])" t-as="line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td id="product" class="text-left"
                                    style="padding-left: 5px; font-family: Open Sans !important;">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-right"
                                    style="padding-left: 5px; font-family: Open Sans !important;">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td class="text-right"
                                    style="padding-left: 5px; font-family: Open Sans !important;">
                                    <span t-field="line.product_uom_id.name"/>
                                </td>
                                <td class="text-right"
                                    style="padding-left: 5px; font-family: Open Sans !important;">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <t t-if="is_discounted">
                                    <td class="text-right"
                                        style="padding-left: 5px; font-family: Open Sans !important;">
                                        <t t-if="line.discount > 0">
                                            <span t-field="line.discount"/>
                                        </t>
                                    </td>
                                </t>
                                <t t-if="is_taxed">
                                    <td class="text-right"
                                        style="padding-left: 5px; font-family: Open Sans !important;">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.tax_ids))"/>
                                    </td>
                                </t>
                                <td class="text-right"
                                    style="padding-left: 5px; font-family: Open Sans !important;">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </t>
                            <t t-else="">
                                <t t-if="line.price_subtotal > 0">
                                    <t t-if="col_span == 7">
                                        <td colspan="7" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                    <t t-if="col_span == 5">
                                        <td colspan="5" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                    <t t-if="col_span == 6">
                                        <td colspan="6" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                    <td class="text-right"
                                        style="padding-left: 5px; font-family: Open Sans !important;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
            <br />
            <table style="width:auto; border: 0px !important; margin-right: 0px; margin-left: auto; page-break-inside: avoid">
                <tr style="width:auto;" class="text-right">
                    <th style="color:rgb(86, 56, 90); "></th>
                    <td style="">

                    </td>
                    <th style="color:rgb(86, 56, 90); font-weight: bold; " class="text-right">Untaxed Amount</th>
                    <td style="width: 35px">

                    </td>
                    <td style="">
                        <span t-esc="amount_untaxed" class="text-right"/>
                    </td>
                </tr>
                <tr style="width:auto;" class="text-right">
                    <th style="color:rgb(86, 56, 90); font-weight: bold; "></th>
                    <td style="">

                    </td>
                    <th style="color:rgb(86, 56, 90); font-weight: bold; " class="text-right">Taxes</th>
                    <td style="width: 35px">

                    </td>
                    <td style="">
                        <span t-esc="amount_tax" class="text-right"/>
                    </td>
                </tr>
                <tr style="width:auto;" class="text-right">
                    <th style="color:rgb(86, 56, 90); font-weight: bold; "></th>
                    <td style="">
                    </td>
                    <th style="color:rgb(86, 56, 90); font-weight: bold; " class="text-right">Discounts</th>
                    <td style="width: 35px">

                    </td>
                    <td style="">
                        <span t-field="o.ks_amount_discount" class="text-right"/>
                    </td>
                </tr>
                <tr style="width:auto;" class="text-right">
                    <th style="color:rgb(86, 56, 90); "></th>
                    <td style="">
                    </td>
                    <th style="color:rgb(86, 56, 90); font-weight: bold; " class="text-right">Total</th>
                    <td style="width: 35px">

                    </td>
                    <td style="" class="text-right">
                        <span t-esc="amount_untaxed + amount_tax" class="text-right"/>
                    </td>
                </tr>
            </table>
            <table style="width:40%;border: 0px;">
                <tr>
                    <th style="color:rgb(86, 56, 90); "></th>
                    <td style="">
                    </td>
                </tr>
                <tr>
                    <th style="color:rgb(86, 56, 90); "></th>
                    <td style="">
                        <span class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="color:rgb(86, 56, 90); "></th>
                    <td style="">
                        <span class="text-left"/>
                    </td>
                </tr>
                <tr>
                    <th style="color:rgb(86, 56, 90); "></th>
                    <td style="">
                        <span class="text-left"/>
                    </td>
                </tr>
            </table>
            <t t-if="is_print_payment_schedule or is_print_terms_and_conditions">
                <t t-if="is_print_page_break">
                <div style="page-break-after: always;"/>
                <table style="margin-left: 10px;">
                    <tr>
                        <div style="margin-left: 10px; margin-right: 10px; margin-top: 10px; margin-bottom: 10px;
                        font-family: Open Sans !important;">
                            <div>
                                <t t-if="is_print_payment_schedule">
                                    <div class="text-left">
                                        <div>
                                            <h5 style="color:rgb(86, 56, 90); font-size: 15px !important; font-weight: bold; font-family: Open Sans !important;">
                                                Payment Schedule and Term
                                            </h5>
                                        </div>
                                        <div>
                                            <p style="font-size: 15px !important; font-family: verdana !important;">
                                                <t t-if="o.standard_payment_schedule">
                                                    <t t-raw="o.standard_payment_schedule"
                                                       style="font-family: verdana !important; font-size: 15px !important;"/>
                                                </t>
                                            </p>
                                        </div>
                                    </div>
                                    <br/>
                                </t>
                                <t t-if="is_print_terms_and_conditions">
                                    <div class="text-left">
                                        <div>
                                            <h5 style="color:rgb(86, 56, 90); font-size: 15px !important; font-weight: bold; font-family: Open Sans !important;">
                                                Terms And Conditions
                                            </h5>
                                        </div>
                                        <div>
                                            <p style="font-size: 15px !important; font-family: verdana !important;">
                                                <t t-raw="o.terms_and_conditions"
                                                   style="font-family: verdana !important; font-size: 15px !important;"/>
                                            </p>
                                        </div>
                                    </div>
                                    <br/>
                                </t>
                            </div>
                        </div>
                    </tr>
                </table>
            </t>
            </t>
            <br/>

        </div>
    </template>

    <template id="aly_invoice_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header" style="height: 80px !important; z-index:0 !important;">
                    <div class="row"
                         style="margin: 0 auto; padding-top: 0px; padding-left: 0px; width: 100%;">
                        <div style="width: 50% !important;" class="col-4 mb4 text-left">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"
                                 style="height: 80px !important;" alt="Logo"/>
                        </div>
                        <div class="col-8 text-right" style="justify-content: center;">
                            <div style="width: 50% !important; padding-right: 4px; padding-top: 35px; display: inline-block !important;">
                                <span style="font-family: Open Sans !important; font-size: 15px;"
                                      t-esc="o.analytic_account_id.name[0:10]"/>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
                <t t-call="web.internal_layout">
                    <div style="margin-left: 10px; margin-right: 10px; margin-top: 0px; margin-bottom: 10px;
            font-family: Open Sans !important;">
                        <div>
                            <h4 style="color:rgb(86, 56, 90); font-size: 22px !important;
                        font-weight: bold; font-family: Open Sans !important;">Invoice #
                                <span t-field="o.name"/>
                            </h4>
                        </div>
                    </div>
                    <t t-call="aly_firnas.aly_invoice_main_template"
                       t-lang="o.partner_id.lang"/>
                    <div class="footer">
                        <div class="row" style="width: 100% !important; margin: auto auto; padding-top: 35px;">
                            <br/>
                            <div class="text-right" style="width: 100%;">
                                <h5 style="font-family: Open Sans !important; font-size: 15px;color:rgb(166, 166, 166);">
                                    Page
                                    <span class="page"/>
                                    of
                                    <span class="topage"/>
                                </h5>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="report_aly_invoice_template" model="ir.actions.report">
        <field name="name">Firnas Invoice Report</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">aly_firnas.aly_invoice_template</field>
        <field name="report_file">aly_firnas.aly_invoice_template</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="print_report_name">(object.get_report_filename('inv'))</field>
        <field name="binding_type">report</field>
    </record>

</odoo>
