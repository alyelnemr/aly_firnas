<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_res_partner_new_fields_form_inherit" model="ir.ui.view">
            <field name="name">view.res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <header>
                        <button name="action_state_approve" attrs="{'invisible': [('state', '=', 'approved')]}"
                                string="Reset to draft" type="object"
                                groups="aly_firnas.group_update_partner_state"/>
                        <button name="action_state_approve" attrs="{'invisible': [('state', '=', 'draft')]}"
                                string="Approve" type="object" class="oe_highlight"
                                groups="aly_firnas.group_update_partner_state"/>
                    </header>
                </xpath>
                <xpath expr="//form[1]/div[1]" position="before">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}" groups="aly_firnas.group_update_partner_state" required="1"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="aly_view_res_partner_search">
            <field name="name">aly.res.partner.form.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter name="group_approval_state" string="Approved" context="{'group_by': 'state'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>