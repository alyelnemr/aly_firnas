<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="aly_hr_expense_view_form">
            <field name="name">hr_expense_view_form.inherit</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object"
                            name="action_view_picking_delivery"
                            class="oe_stat_button"
                            attrs="{'invisible':['|', ('picking_count', '=', 0), ('picking_count', '=', False)]}"
                            icon="fa-truck">
                        <field name="picking_count" string="Delivery" widget="statinfo"
                               attrs="{'invisible':['|', ('picking_count', '=', 0), ('picking_count', '=', False)]}"
                        />
                    </button>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="partner_id" />
                    <field name="vendor_contact" />
                    <field name="user_to_approve_id" />
                    <field name="employee_id" groups="hr_expense.group_hr_expense_team_approver"/>
                    <field name="project_id"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="replace">
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="attrs">{'invisible': False}</attribute>
                    <attribute name="modifiers">
                        {'invisible':False,'readonly':[['state','not
                        in',['draft']]],'required':true}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>