<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="aly_hr_expense_view_form">
            <field name="name">hr_expense_view_form.inherit</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object"
                            name="action_view_picking_delivery"
                            class="oe_stat_button"
                            attrs="{'invisible':['|', ('picking_count', '=', 0), ('picking_count', '=', False)]}"
                            icon="fa-truck">
                        <field name="picking_count" string="Delivery" widget="statinfo"
                               attrs="{'invisible':['|', ('picking_count', '=', 0), ('picking_count', '=', False)]}"
                        />
                    </button>
                </xpath>
                <xpath expr="//field[@name='payment_mode']" position="replace">
                </xpath>
                <xpath expr="//field[@name='unit_amount']" position="replace">
                </xpath>
                <xpath expr="//field[@name='tax_ids']" position="replace">
                </xpath>
                <xpath expr="//field[@name='total_amount']" position="replace">
                </xpath>
                <xpath expr="//label[@for='quantity']" position="replace">
                </xpath>
                <xpath expr="//label[@for='payment_mode']" position="replace">
                </xpath>
                <xpath expr="//div[@class='o_row']" position="replace">
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="replace">
                </xpath>
                <xpath expr="//field[@name='company_id']" position="replace">
                    <field name="total_amount_company" attrs="{'readonly': [('is_same_currency', '=', True)]}"/>
                    <field name="is_same_currency" invisible="1"/>
                    <field name="account_id" options="{'no_create': True}"
                           domain="[('internal_type', '=', 'other'), ('company_id', '=', company_id)]"
                           attrs="{'readonly': ['|', ('product_id', '!=', False), ('is_editable', '=', False)]}"
                           context="{'default_company_id': company_id}"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="replace">
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="replace">
                </xpath>
                <xpath expr="//field[@name='analytic_account_id']" position="replace">
                    <field name="tax_ids" widget="many2many_tags" groups="account.group_account_user"
                           attrs="{'readonly': [('is_editable', '=', False)]}" context="{'default_company_id': company_id}"/>
                </xpath>
                <xpath expr="//field[@name='analytic_tag_ids']" position="replace">
                    <field name="total_amount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="replace">
                    <field name="currency_id" groups="base.group_multi_currency"/>
                    <field name="unit_amount" required="1" widget="monetary"
                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </xpath>
                <xpath expr="//field[@name='reference']" position="replace">
                    <field name="product_id" required="1"
                           context="{'default_can_be_expensed': 1, 'tree_view_ref': 'hr_expense.product_product_expense_tree_view'}"
                           widget="many2one_barcode"
                    />
                </xpath>
                <xpath expr="//field[@name='date']" position="replace">
                    <field name="name" placeholder="e.g. Lunch with Customer"/>
                </xpath>
                <xpath expr="//field[@name='account_id']" position="replace">
                    <label for="quantity"/>
                    <div class="o_row">
                        <field name="quantity" class="oe_inline"/>
                        <field name="product_uom_id" required="1" widget="selection" class="oe_inline" groups="uom.group_uom"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="replace">
                    <field name="partner_id"/>
                    <field name="vendor_contact_id"/>
                    <field name="reference" attrs="{'readonly': [('is_ref_editable', '=', False)]}"/>
                    <field name="date" attrs="{'invisible': False}" modifiers="{'invisible':False,'readonly':[['state','not
                        in',['draft']]],'required':true}"/>
                    <field name="project_id"/>
                    <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': ['|', ('product_id', '!=', False), ('is_editable', '=', False)]}"/>
                    <field name="analytic_account_id" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"
                           groups="analytic.group_analytic_accounting" attrs="{'readonly': ['|', ('product_id', '!=', False), ('is_editable', '=', False)]}"/>
                    <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"
                           attrs="{'readonly': ['|', ('product_id', '!=', False), ('is_editable', '=', False)]}"/>
                    <field name="employee_id" groups="hr_expense.group_hr_expense_team_approver"
                           context="{'default_company_id': company_id}"/>
                    <field name="payment_mode" widget="radio" context="{'default_payment_mode': 'company_account'}"
                           attrs="{'readonly': True}"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="aly_view_hr_expense_sheet_form">
            <field name="name">hr.expense.sheet.form.inherit</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='reset_expense_sheets']" position="replace">
                    <button name="reset_expense_sheets" string="Reset to Draft" type="object"
                            attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'in', ['draft'])]}"/>
                </xpath>
                <xpath expr="//group[@name='employee_details']" position="after">
                    <group>
                        <group>
                            <field name="journal_id" options="{'no_open': True, 'no_create': True}"
                                   attrs="{'invisible': [('payment_mode', '!=', 'own_account')]}"
                                   context="{'default_company_id': company_id}"/>
                            <field name="bank_journal_id" groups="account.group_account_user"
                                   options="{'no_open': True, 'no_create': True}"
                                   attrs="{'invisible': [('payment_mode', '!=', 'company_account')],
                                   'required': True}"
                                   context="{'default_company_id': company_id}"/>
                            <field name="accounting_date" groups="account.group_account_user"
                                   attrs="{'invisible': [('state', 'not in', ['approve', 'post', 'done'])]}"/>
                        </group>
                        <group>
                            <field name="account_move_id" groups="account.group_account_user"
                                   attrs="{'invisible': [('state', 'not in', ['post', 'done'])]}" readonly="1"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='payment_mode']" position="attributes">
                    <attribute name="context">{'default_payment_mode': 'company_account'}</attribute>
                </xpath>
                <xpath expr="//page[@name='other_info']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='expense_line_ids']/tree/field[@name='name']" position="before">
                    <field name="product_id"/>
                </xpath>
                <xpath expr="//field[@name='expense_line_ids']/tree/field[@name='name']" position="after">
                    <field name="partner_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>