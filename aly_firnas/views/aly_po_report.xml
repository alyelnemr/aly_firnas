    <template id="aly_rfq_main_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header" style="height: 100px !important; z-index:0 !important;">
                    <div class="row"
                         style="margin: 0 auto; padding-top: 0px; padding-left: 0px; height: 100px !important; width: 100%;">
                        <div style="width: 50% !important;" class="col-4 mb4 text-left">
                            <img src="/aly_firnas/static/src/img/firnas_logo_full.jpg"
                                 style="height: 90px !important;" alt="Logo"/>
                        </div>
                        <div class="col-8 text-right" style="justify-content: center;">
                            <div style="width: 50% !important; padding-right: 4px; display: inline-block !important;">
                                <span style="font-family: Open Sans !important; font-size: 15px;"
                                      t-esc="o.analytic_account_id.name[0:10]"/>
                            </div>
                        </div>
