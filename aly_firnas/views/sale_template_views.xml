<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="aly_sale_order_template_view_form_inherit" model="ir.ui.view">
            <field name="name">aly.sale.order.template.form.inherit</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="section"/>
                </xpath>
                <xpath expr="//field[@name='sale_order_template_option_ids']/tree/field[@name='product_id']" position="after">
                    <field name="section"/>
                </xpath>
                <xpath expr="//notebook/page[1]" position="before">
                    <page string="Additional Products">
                        <field name="sale_order_template_additional_ids">
                            <tree string="Quotation Template Additional Products" editable="bottom">
                                <field name="product_id"/>
                                <field name="section"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="uom_id" groups="uom.group_uom"/>
                                <field name="price_unit"/>
                                <field name="discount" groups="product.group_discount_per_so_line"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>