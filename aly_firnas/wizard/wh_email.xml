<odoo>
    <data>
        <template id="not_authorized_page">
            <t t-call="portal.portal_layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="text-center">Authorization!</h1>
                                    <p class="text-center">
                                        You are <b>NOT authorized</b> to interact with this WH Transaction.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        <template id="thankyou_page">
            <t t-call="portal.portal_layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="text-center">Done!</h1>
                                    <p class="text-center">
                                        You <b>Approved</b> your WH Transaction.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        <template id="thankyou_page_reject">
            <t t-call="portal.portal_layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="text-center">Done!</h1>
                                    <p class="text-center">
                                        You <b>Rejected</b> your WH Transaction.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <record id="aly_wh_mail_template" model="mail.template">
            <field name="name">WH Transaction: Send by email</field>
            <field name="model_id" ref="aly_firnas.model_stock_picking"/>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">${object.name} Confirmation</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <t t-if="object.partner_id.parent_id">
                            <t t-out="object.partner_id.name or ''"></t>
                            (<t t-out="object.partner_id.parent_id.name or ''"></t>),
                        </t>
                        <t t-else="">
                            <t t-out="object.partner_id.name or ''"></t>,
                        </t>
                        <br/>
                        <br/>
                        Here is your WH Transaction ${object.name}
                        <t t-if="object.name">
                            <strong t-out="object.name or ''"></strong>
                        </t>
                        for your confirmation,
                        <br/>
                        <br/>
                        <t t-if="object.approve_url or object.reject_url">
                            <br/>
                            <table class="table table-sm text-center" style="width:40%;border: 1px double black;">
                                <tr>
                                    <td style="background-color:#83eb34 !important;color:#FFF !important;width:50%;">
                                        <a t-att-href="object.approve_url">Approve</a>
                                    </td>
                                    <td style="background-color:#cadbbd !important;color:#FFF !important;width:50%;">
                                        <a t-att-href="object.reject_url">Reject</a>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="aly_wh_email_form" model="ir.ui.view">
            <field name="name">aly_wh_email_form</field>
            <field name="model">wh.email.wizard</field>
            <field name="arch" type="xml">
                <form string="Select User">
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            <!--                            <field name="current_url"/>-->
                        </group>
                    </group>
                    <footer>
                        <button name="action_send_mail" type="object" string="Send WH Confirmation Mail" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="aly_wh_send_mail_wizard_action" model="ir.actions.act_window">
            <field name="name">Select User</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wh.email.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="aly_wh_email_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>