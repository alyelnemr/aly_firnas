<odoo>
    <data>
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="priority">1001</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']/button[@name='action_view_delivery']" position="after">
                    <field name="purchase_order_counter" invisible="1"/>
                    <button type="object" name="action_view_purchase_order" class="oe_stat_button" icon="fa-list-ul"
                            attrs="{'invisible': ['|', ('purchase_order_counter', '=', False), ('purchase_order_count', '=', 0)]}">
                        <field name="purchase_order_counter" widget="statinfo" string="RFQ"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>